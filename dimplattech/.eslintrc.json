{
  "parser": "@typescript-eslint/parser",  
  "plugins": ["@typescript-eslint"], 
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",  
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,    
    "node": true,      
    "es2021": true    
  },
  "parserOptions": {
    "ecmaVersion": 12, 
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true  
    }
  },
  "rules": {
    "no-console": "off",  
    "react-hooks/exhaustive-deps": "off",
    "@typescript-eslint/no-explicit-any": "off" 
  }
}
